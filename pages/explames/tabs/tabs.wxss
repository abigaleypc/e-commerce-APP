.menu {
  margin-top: 1rem;
  width: 100%;
  height: 4rem;
  line-height: 2rem;
  white-space: nowrap;
  display: flex;
}

.menu_item {
  display: inline-block;
  width: 10%;
  height: 2rem;
  margin: 0 .3rem;
  white-space: nowrap;
  text-align: center;
}

.red_line {
  width: 10%;
  height: .15rem;
  background: #ce2222;
  transition: 0.2s all ease-in-out;
}

.selected_menu {
  color: #ce2222;
}